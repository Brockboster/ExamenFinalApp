             x:Class="ExamenFinalApp.Views.BienvenidaPage"
             BackgroundImageSource="app.jpg">
    <ContentPage.Content>
        <StackLayout >

            <Entry x:Name="txtuser" Placeholder="Usuario" TextColor="White"       ></Entry>
